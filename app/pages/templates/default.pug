doctype html
html.page(lang="ru-RU")
  head
    title 
      block titleText

    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    block fonts

    block styles
      link(rel="stylesheet" href="styles/style.min.css" type="text/css")

    block scripts
      script(src="scripts/script.min.js" type="text/javascript" defer)

  body.body
    header.header
      block headerContent

    main.main
      block mainContent

    footer.footer
      block footerContent

    block hideContent